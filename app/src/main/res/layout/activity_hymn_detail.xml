<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techbeloved.hymnbook.hymndetail.HymnDetailActivity">
    <!--LinearLayout allows everything to fit the screen-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="snap">

            <!--Pull in the toolbar layout-->
            <include layout="@layout/include_toolbar_main" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.techbeloved.hymnbook.viewgroup.TouchableFrameWrapper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/touchable_frame">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/detail_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </com.techbeloved.hymnbook.viewgroup.TouchableFrameWrapper>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play"
        app:fabSize="normal"
        app:layout_anchor="@id/touchable_frame"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="com.techbeloved.hymnbook.utils.ScrollAwareFABBehaviour" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>