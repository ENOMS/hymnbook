<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<item name="android:windowContentOverlay">@null</item>-->

        <!-- Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!--Setup fast scroll-->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/scrollbar_vertical_track</item>

        <item name="android:windowSoftInputMode">adjustPan</item>

        <!-- Bottom sheet-->
        <item name="bottomSheetDialogTheme">@style/Hymnbook.BottomSheet</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/colorFadedText</item>
        <item name="android:colorBackground">@color/primary_white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <!--<item name="android:textColorPrimary">@color/primary_white</item>-->
        <!-- actionMode overlay -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/accent</item>

    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?android:activatedBackgroundIndicator</item>
    </style>

    <style name="TextAppearance.Hymnbook.BottomNav.Deactivated" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/colorFadedText</item>
    </style>
    <style name="TextAppearance.Hymnbook.BottomNav" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Hymnbook.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/colorSearchView</item>
        <item name="submitBackground">@color/colorSearchView</item>
        <item name="android:background">@color/colorSearchView</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Hymnbook.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?colorButtonNormal</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">#7FEEEEEE</item>
    </style>

    <style name="TextAppearance.Hymnbook.Title" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Hymnbook.Button.Normal" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Hymnbook.Button.Unelevated" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Hymnbook.BottomSheet" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Hymnbook.Modal</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Hymnbook.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
    </style>
</resources>