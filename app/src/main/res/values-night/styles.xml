<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/primary_white</item>
        <item name="android:textColorPrimary">@color/primary_white</item>
        <item name="android:textColorSecondary">@color/secondary_white</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSecondaryVariant">@color/secondary_white</item>

        <!--<item name="android:textColorPrimary">@color/primary_white</item>-->
        <!-- actionMode overlay -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSurface</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->

        <!-- Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!--Setup fast scroll-->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/scrollbar_vertical_track</item>

        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Hymnbook.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">?attr/colorSurface</item>
        <item name="submitBackground">?attr/colorSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="searchHintIcon">@null</item>
    </style>
</resources>